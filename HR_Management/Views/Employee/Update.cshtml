@model EmployeeUser
@{
    ViewData["Title"] = "Update";
}

<!--Index start-->
<section id="hr-addproject">
    <div class="dashboard-wrapper">
        <div class="dashboard-header">
            <div class="left-header">
                <button class="navbar-toggler">
                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
                         width="34px" height="34px" viewBox="0 0 24 24" version="1.1">
                        <g stroke="none" stroke-width="1" fill="#d0d3d6" fill-rule="evenodd">
                            <rect x="0" y="0" width="24" height="24"></rect>
                            <rect fill="#3445e5" x="4" y="4" width="7" height="7" rx="1.5"></rect>
                            <path d="M5.5,13 L9.5,13 C10.3284271,13 11,13.6715729 11,14.5 L11,18.5 C11,19.3284271 10.3284271,20 9.5,20 L5.5,20 C4.67157288,20 4,19.3284271 4,18.5 L4,14.5 C4,13.6715729 4.67157288,13 5.5,13 Z M14.5,4 L18.5,4 C19.3284271,4 20,4.67157288 20,5.5 L20,9.5 C20,10.3284271 19.3284271,11 18.5,11 L14.5,11 C13.6715729,11 13,10.3284271 13,9.5 L13,5.5 C13,4.67157288 13.6715729,4 14.5,4 Z M14.5,13 L18.5,13 C19.3284271,13 20,13.6715729 20,14.5 L20,18.5 C20,19.3284271 19.3284271,20 18.5,20 L14.5,20 C13.6715729,20 13,19.3284271 13,18.5 L13,14.5 C13,13.6715729 13.6715729,13 14.5,13 Z"
                                  fill="#3445e5" opacity="0.3"></path>
                        </g>
                    </svg>
                </button>
                <h3>Edit Employee</h3>
            </div>
        </div>
        <div class="dashboard-content">
            <div class="row">
                <div class="dl-table table-responsive pb-3 col-12">
                    <form class="row g-3" method="post" enctype="multipart/form-data" style="padding: 10px 5px">
                        <div class="input-group gap-3" id="datepicker">
                            <input asp-for="FullName" class="form-control" placeholder="Full Name">
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Contact Phone">
                        </div>
                        <div class="input-group gap-3 mt-1">
                            <span asp-validation-for="FullName" class="text-danger"></span>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="input-group gap-3 mt-2">
                            <select class="form-control" asp-for="DepartmentId" asp-items="new SelectList((List<Department>)ViewBag.Department,nameof(Department.Id),nameof(Department.DepartmentName))"></select>
                            @*<select class="form-control" asp-for="DesignationId" asp-items="new SelectList((List<Gender>)ViewBag.Designation,nameof(Designation.Id),nameof(Designation.DesignationName))"></select>*@
                        </div>
                        <div class="input-group gap-3 mt-4">
                            <select class="form-control" asp-for="GenderId" asp-items="new SelectList((List<Gender>)ViewBag.Gender,nameof(Gender.Id),nameof(Gender.GenderName))"></select>
                            <input asp-for="BirthDate" type="text" class="form-control" placeholder="Birth Date" onfocus="(this.type='date')">
                        </div>
                        <div class="input-group gap-3 mt-1">
                            <span asp-validation-for="GenderId" class="text-danger"></span>
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </div>
                        <div class="input-group gap-3 mt-2">
                            <input asp-for="Email" class="form-control" placeholder="Email">
                        </div>
                        <div class="input-group gap-3 mt-1">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="input-group gap-3 mt-2">
                            <input asp-for="IdSerialNo" class="form-control" placeholder="ID Serial Number">
                            <input asp-for="FIN" class="form-control" placeholder="FIN">
                        </div>
                        <div class="input-group gap-3 mt-1">
                            <span asp-validation-for="IdSerialNo" class="text-danger"></span>
                            <span asp-validation-for="FIN" class="text-danger"></span>
                        </div>
                        <div class="input-group gap-3 mt-3">
                            <input asp-for="Salary" class="form-control" placeholder="Salary">
                            <div class="form-check form-check-inline gap-2">
                                <span>Is department head?</span>
                                <div>
                                    <label class="form-check-label" for="inlineRadio1">Yes</label>
                                    @Html.RadioButtonFor(user => user.IsHead, "True")
                                    <label class="form-check-label" for="inlineRadio1">No</label>
                                    @Html.RadioButtonFor(user => user.IsHead, "False")
                                </div>
                            </div>
                        </div>
                        <div class="input-group gap-3 mt-1">
                            <span asp-validation-for="Salary" class="text-danger"></span>
                            <span asp-validation-for="IsHead" class="text-danger"></span>
                        </div>
                        <div class="input-group gap-3 mt-4">
                            <label class="form-label">Add Photo</label>
                            <input asp-for="Photo" class="form-control">
                            <select class="form-control" asp-for="StatusId" asp-items="new SelectList((List<Status>)ViewBag.Status,nameof(Status.Id),nameof(Status.StatusName))"></select>
                        </div>
                        <div class="input-group gap-3 mt-2">
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>
                        <div class="input-group gap-0 mt-3 justify-content-center">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a type="button" class="btn btn-secondary" asp-action="Index">Close</a>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Index end-->
